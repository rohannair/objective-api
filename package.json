{
  "name": "hoops-api",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "better-npm-run start:dev",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:transpile",
    "build:transpile": "babel app -d dist",
    "db:destroy": "psql qdb -f ./db/scripts/destroy.sql",
    "db:migrate": "better-npm-run migrate:dev",
    "db:create:migration": "knex migrate:make $NAME",
    "db:create:seed": "knex seed:make $NAME",
    "db:recreate": "npm run db:destroy && npm run db:migrate",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "betterScripts": {
    "start:dev": {
      "command": "nodemon --exec babel-node ./bin/server ",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "koa:*,app:*,knex:query,koa-router:*"
      }
    },
    "migrate:dev": {
      "command": "knex migrate:latest",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "knex:query, app:*"
      }
    }
  },
  "engines": {
    "node": "6.7.0"
  },
  "author": "Rohan Nair <rohan@qrtrmstr.com>",
  "dependencies": {
    "babel-plugin-syntax-async-functions": "~6.13.0",
    "babel-plugin-transform-regenerator": "~6.16.1",
    "bcrypt": "~0.8.7",
    "bluebird": "~3.4.6",
    "chalk": "~1.1.3",
    "co": "~4.6.0",
    "debug": "~2.2.0",
    "dotenv": "~2.0.0",
    "knex": "~0.12.2",
    "koa": "~2.0.0",
    "koa-bodyparser": "~3.2.0",
    "koa-convert": "~1.2.0",
    "koa-router": "~7.0.1",
    "node-uuid": "~1.4.7",
    "objection": "~0.5.5",
    "pg": "~6.1.0",
    "throng": "~4.0.0",
    "winston": "~2.2.0"
  },
  "devDependencies": {
    "babel-cli": "~6.16.0",
    "babel-core": "~6.16.0",
    "babel-polyfill": "~6.16.0",
    "babel-preset-es2015": "~6.16.0",
    "babel-preset-stage-0": "~6.16.0",
    "better-npm-run": "0.0.11",
    "nodemon": "~1.10.2",
    "rimraf": "~2.5.4"
  }
}
