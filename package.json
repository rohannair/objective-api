{
  "name": "hoops-api",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "better-npm-run start:prod",
    "dev": "better-npm-run start:dev",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:transpile",
    "build:transpile": "./node_modules/.bin/babel app -d dist",
    "db:destroy": "psql qdb -f ./db/scripts/destroy.sql",
    "db:migrate": "better-npm-run migrate:dev",
    "db:create:migration": "knex migrate:make $NAME",
    "db:create:seed": "knex seed:make $NAME",
    "db:recreate": "npm run db:destroy && npm run db:migrate",
    "db:seed": "knex seed:run",
    "postinstall": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "betterScripts": {
    "start:prod": {
      "command": "forever ./dist/server.js"
    },
    "start:dev": {
      "command": "nodemon --exec babel-node ./app/server ",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "koa:*,app:*,koa-router:*,knex:query,knex:bindings",
        "WEB_CONCURRENCY": 1,
        "PORT": 3000
      }
    },
    "migrate:dev": {
      "command": "knex migrate:latest",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "knex:query, app:*"
      }
    }
  },
  "engines": {
    "node": "6.9.0"
  },
  "author": "Rohan Nair <rohan@qrtrmstr.com>",
  "dependencies": {
    "bcrypt": "~0.8.7",
    "bcrypt-node": "^0.1.0",
    "bluebird": "~3.4.6",
    "boom": "^4.2.0",
    "chalk": "~1.1.3",
    "co": "~4.6.0",
    "debug": "~2.2.0",
    "dotenv": "~2.0.0",
    "forever": "^0.15.3",
    "jsonwebtoken": "^7.1.9",
    "knex": "~0.12.2",
    "koa": "~2.0.0",
    "koa-bodyparser": "~3.2.0",
    "koa-bouncer": "^5.1.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "^0.0.16",
    "koa-helmet": "^2.0.0",
    "koa-jwt": "^1.2.0",
    "koa-logger": "next",
    "koa-router": "~7.0.1",
    "lodash": "~4.16.2",
    "newrelic": "^1.34.0",
    "node-uuid": "~1.4.7",
    "objection": "^0.6.1",
    "pg": "~6.1.0",
    "pm2": "~2.0.18",
    "sparkpost": "^2.0.1",
    "throng": "~4.0.0",
    "winston": "~2.2.0"
  },
  "devDependencies": {
    "babel-cli": "~6.16.0",
    "babel-core": "~6.16.0",
    "babel-plugin-syntax-async-functions": "~6.13.0",
    "babel-plugin-transform-regenerator": "~6.16.1",
    "babel-polyfill": "~6.16.0",
    "babel-preset-es2015": "~6.16.0",
    "babel-preset-stage-0": "~6.16.0",
    "better-npm-run": "0.0.11",
    "nodemon": "~1.10.2",
    "rimraf": "~2.5.4"
  }
}
